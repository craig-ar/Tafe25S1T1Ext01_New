<Page
    x:Class="Calculator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<Border Background="#f6e0ba" Padding="30" Height="538">
			<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
				<Image Source="abacus.PNG" HorizontalAlignment="Right" VerticalAlignment="Center" MaxWidth="95"/>
				<TextBlock x:Name="titleTextBlock" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30">
			Universal Calculator
				</TextBlock>
				<Button x:Name="mathsCalculatorButton" FontSize="20" HorizontalAlignment="Center" Width="300" Height="42" Click="mathsCalculatorButton_Click">
					Maths Calculator
				</Button>
				<Button x:Name="morgageCalculatorButton" FontSize="20" HorizontalAlignment="Center" Width="300" Height="42" Click="morgageCalculatorButton_Click">
					Morgage Calculator
				</Button>
				<Button x:Name="currencyConverterButton" FontSize="20" HorizontalAlignment="Center" Width="300" Height="42" Click="currencyConverterButton_Click">
					Currency Converter
				</Button>
				<Button x:Name="exitButton" FontSize="20" HorizontalAlignment="Center" Width="300" Height="42" Click="exitButton_Click">
					Exit
				</Button>
			</StackPanel>
		</Border>
	</StackPanel>
</Page>
